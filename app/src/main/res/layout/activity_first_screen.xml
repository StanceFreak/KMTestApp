<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".views.FirstScreenActivity">

    <ImageView
        android:id="@+id/first_photo"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:src="@drawable/ic_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196" />
    
    <EditText
        android:id="@+id/first_et_name"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="45dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/first_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/et_border"
        android:backgroundTint="@color/white"
        android:hint="Name"
        android:textColorHint="@color/hint_color"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"/>

    <EditText
        android:id="@+id/first_et_palindrome"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/first_et_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/et_border"
        android:backgroundTint="@color/white"
        android:hint="Palindrome"
        android:textColorHint="@color/hint_color"
        android:textSize="16sp"
        android:inputType="text"
        android:fontFamily="@font/poppins_regular"/>

    <Button
        android:id="@+id/first_btn_check"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_et_palindrome"
        android:background="@drawable/et_border"
        android:backgroundTint="@color/btn_color"
        android:text="Check"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"/>

    <Button
        android:id="@+id/first_btn_next"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_btn_check"
        android:background="@drawable/et_border"
        android:backgroundTint="@color/btn_color"
        android:text="Next"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"/>

</androidx.constraintlayout.widget.ConstraintLayout>